@model List<Exam>
@{
    ViewData["Title"] = "Index";
}

@{




    @if (Model.Count > 0)
    {<div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Created Date</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Header</td>
                                <td>@item.CreatedDate</td>
                                <td>@Html.ActionLink("Delete", "Delete", "Exam", new { id = item.ID })</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

    }
}

